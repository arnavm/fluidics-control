<?xml version="1.0" encoding="ISO-8859-1"?>
<settings><!-- simulate kilroy settings -->
  <!-- Valve parameters -->
  <valve_type type="string">Hamilton</valve_type> <!-- Simulate a Hamilton valve (because I'm not sure the none option is debugged yet)-->  
  <valves_com_port type="string">COM6</valves_com_port>	<!-- COM port of serial connection to valves -->  

  <!-- CNC parameters -->
  <cnc type="string">GRBL</cnc> <!-- Look for a CNC (was XYZ) -->
  <cnc_com_port type="string">COM5</cnc_com_port> <!-- COM port of serial connection to CNC -->  
  
  <!-- Pump parameters -->
  <pump_class type="string">pumps.gilson_mp3</pump_class> <!--  pumps.gilson_mp3 Control class for pump -->
  <pump_com_port type="string">COM7</pump_com_port><!-- COM port of serial connection to pump ("Keyspan USB Serial Port")-->
  <pump_ID type="int">30</pump_ID> <!-- ID of Pump -->
  <simulate_pump type="boolean">False</simulate_pump><!-- Simulate pump? (Defaults to False) -->
  <flip_flow_direction type="boolean">False</flip_flow_direction><!-- Flip the direction defined as forward? -->
  
  <!-- General Kilroy parameters -->
  <verbose type="boolean">False</verbose>
  <serial_verbose type="boolean">False</serial_verbose>  <!-- display serial commands? -->
  <tcp_port type="int">9500</tcp_port> <!-- TCP/IP port for local communication with Dave -->
  <protocols_file type = "">default_config.xml</protocols_file><!-- Location of default protocol -->
  <commands_file type = "">default_config.xml</commands_file><!-- Location of default commands -->

</settings>
